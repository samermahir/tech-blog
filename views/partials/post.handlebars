<style>
    .post {
        border: 1px solid #ccc;
        padding: 10px;
        margin: 10px;
        border-radius: 10px;
    }
    
</style>

<div class="post">
    <h2>{{title}}</h2>
    <p>{{body}}</p>
    <p>Posted By <strong>{{user.username}}</strong></p>
    <p>Posted on {{format_date createdAt}}</p>
    <form method="POST" action="api/post/delete/{{id}}">
    <button type="submit">Delete</button>
</form>
</div>